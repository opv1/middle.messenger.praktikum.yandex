{
  "name": "messenger",
  "version": "1.0.0",
  "description": "messenger",
  "scripts": {
    "clean": "rm -rf .parcel-cache && rm -rf dist",
    "dev": "npm run clean && parcel ./src/pages/**/*.html && parcel watch ./src/pages/**/*",
    "build": "parcel build ./src/pages/**/*.html",
    "start": "npm run build && node ./index.js",
    "lint": "eslint ./src/**/*.ts --fix && npx stylelint ./src/**/*.scss --fix",
    "test": "./node_modules/.bin/mocha",
    "reinstall-modules": "rm -rf ./node_modules && rm -f package-lock.json && npm cache clean --force && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opv1/middle.messenger.praktikum.yandex.git"
  },
  "author": "Pavel Ovechkin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/opv1/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/opv1/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@deeppines/parcel-resolver-root": "0.4.1",
    "@parcel/config-default": "2.3.2",
    "@parcel/packager-raw-url": "2.3.2",
    "@parcel/transformer-pug": "2.3.2",
    "@parcel/transformer-sass": "2.3.2",
    "@parcel/transformer-webmanifest": "2.3.2",
    "@prettier/plugin-pug": "2.1.1",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "chai": "4.3.6",
    "cssnano": "5.1.12",
    "eslint": "8.10.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "express": "4.17.3",
    "mocha": "10.0.0",
    "nanoid": "3.3.1",
    "parcel": "2.3.2",
    "parcel-plugin-clean-easy": "1.0.2",
    "parcel-transformer-pug-precompile": "1.0.6",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "stylelint": "14.5.3",
    "stylelint-config-standard-scss": "3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.3.0",
    "typescript": "4.6.2"
  },
  "parcelResolverRoot": {
    "@": "./src/"
  },
  "parcelCleanPaths": [
    "dist",
    ".parcel-cache"
  ]
}
