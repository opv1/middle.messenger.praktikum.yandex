  "description": "messenger",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --mode development",
    "start": "npm run build && node ./index.js",
    "lint": "eslint ./src/**/*.ts --fix && npx stylelint ./src/**/*.scss --fix",
    "mocha": "./node_modules/.bin/mocha",
    "test": "npm run mocha",
    "clean": "rimraf dist && rimraf ./node_modules",
    "reinstall-modules": "rimraf ./node_modules && rimraf package-lock.json && npm cache clean --force && npm i"
  },
