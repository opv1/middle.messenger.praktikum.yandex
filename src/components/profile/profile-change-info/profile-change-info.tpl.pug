include ../profile-item/profile-item

form.profile__container
  .profile__header
    .profile__avatar
  .profile__main
    +profileItem('Почта')
      | !{ emailField }
    +profileItem('Логин')
      | !{ loginField }
    +profileItem('Имя')
      | !{ firstNameField }
    +profileItem('Фамилия')
      | !{ secondNameField }
    +profileItem('Имя в чате')
      | !{ displayNameField }
    +profileItem('Телефон')
      | !{ phoneField }
  .profile__footer
    | !{ saveButton }
